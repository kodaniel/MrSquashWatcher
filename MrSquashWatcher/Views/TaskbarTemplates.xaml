<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MrSquashWatcher"
    xmlns:tb="clr-namespace:H.NotifyIcon;assembly=H.NotifyIcon.Wpf">

    <tb:TaskbarIcon
        x:Key="TaskbarIcon"
        LeftClickCommand="{Binding OpenPopupCommand}"
        NoLeftClickDelay="True">
        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding OpenReservationCommand}" Header="Foglalás" />
                <MenuItem
                    Header="Indítás a rendszerrel"
                    IsCheckable="True"
                    IsChecked="{Binding AutoStartupApplication, Mode=TwoWay}" />
                <Separator />
                <MenuItem Command="{Binding ExitCommand}" Header="Kilépés" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>

        <tb:TaskbarIcon.TrayPopup>
            <local:TaskbarPopup />
        </tb:TaskbarIcon.TrayPopup>

    </tb:TaskbarIcon>

</ResourceDictionary>